{
    "manifest_version": 2,
    "name": "Pomodoro Blacklist",
    "version": "1.0",
  
    "description": "Work timer that uses the Pomodoro Technique and blocks sites.",

    "browser_specific_settings": {
      "gecko": {
        "id": "{ce4318e0-1653-4d47-b05b-749958f04abc}",
        "strict_min_version": "42.0"
      }
    },
  
    "icons": {
      "48": "icons/all-48.png",
      "96": "icons/all-96.png"
    },

    "browser_action": {
        "default_icon": {
          "48": "icons/all-48.png",
          "96": "icons/all-96.png"
        },
        "default_title": "Pomodoro Blacklist",
        "default_popup": "popup/pomodoro_blacklist.html"
    },

    "permissions": [
      "storage",
      "webRequest",
      "webRequestBlocking",
      "<all_urls>"
    ],

    "background": {
      "scripts": ["background.js"]
    },

    "web_accessible_resources": [
      "blocked.html"
    ]
  }
  